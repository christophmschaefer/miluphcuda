
irgendwo in rhs.cu

function on host() 
{

kernel loop 1 berechnet:
	p.p[i] += p.DISPH_Y[ip] * W;
	p.DISPH_rho[i] = p.m[i]*p.p[i]/p.DISPH_Y[i];


do {	

	p_stored[i] = p.p[i]
	kernel call zu calculatepressure(rho = DISPH_rho[i])
				 p.DISPH_Y[i] = p.m[i]*p.p[i]/p.DISPH_rho[i];
	
	tolerance bestimmen p_stored - p.p

	kernel call zu um
		 p.p[i] += p.DISPH_Y[ip] * W;
		 p.DISPH_rho[i] = p.m[i]*p.p[i]/p.DISPH_Y[i];


} while (tol > eps);


